@model List<CartItemViewModel>
@{
    ViewBag.Title = "Sepetim";
}
<div class="container mt-5">
    <h2>My Cart</h2>
    @if (Model.Count == 0)
    {
        <p>Your cart is empty.</p>
    }
    else
    {
        <table class="table">
            <thead>
            <tr>
                <th>Course Name</th>
                <th>Price</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CourseName</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <!-- Kaldırma işlemi için buton ekleyebilirsiniz -->
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <div class="mt-3">
            <a href="@Url.Action("Checkout", "Order")" class="btn btn-primary">Buy Me</a>
        </div>
    }
</div>