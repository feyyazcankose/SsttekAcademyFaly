@model CourseDetailViewModel
@{
ViewBag.Title = Model.Name;
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p>@Model.Description</p>
            <p class="text-primary h4">@Model.Price.ToString("C")</p>
            <form asp-action="AddToCart" method="post">
                <input type="hidden" name="courseId" value="@Model.Id" />
                <button type="submit" class="btn btn-success">Sepete Ekle</button>
            </form>
        </div>
    </div>
    <div class="mt-5">
        <h3>Kurs İçeriği</h3>
        @foreach (var sectionItem in Model.Sections)
        {
        <div class="mt-3">
            <h4>
                @sectionItem.Title
            </h4>
            <ul class="list-group">
                @foreach (var video in sectionItem.Videos)
                {
                <li class="list-group-item">@video.Title</li>
                }
            </ul>
        </div>
        }
    </div>
</div>
